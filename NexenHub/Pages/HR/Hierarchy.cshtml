<link href="~/lib/vis/dist/vis-network.min.css" rel="stylesheet" type="text/css" />

<script src="~/lib/vis/dist/vis-network.min.js"></script>

<div id="mynetwork" style="width:100%;height:80vh;"></div>

<script type="text/javascript">

    var nodes = new vis.DataSet(@Html.Raw(Model.FormatNodes));
    var edges = new vis.DataSet(@Html.Raw(Model.FormatLinks));

    // create a network
    var container = document.getElementById("mynetwork");

    var data = {
        nodes: nodes,
        edges: edges,
    };

    var options = {
        layout: {
            hierarchical: {
                direction: "DU",
                sortMethod: "directed",
                nodeSpacing: 270,
                /*levelSeparation: 250,*/
                parentCentralization: true
            },
        },
        interaction: { dragNodes: true },
        physics: {
            enabled: false
        },
        //layout: {
        //    hierarchical: {
        //        direction: "DU",
        //      sortMethod: "directed",
        //      nodeSpacing: 200,
        //      shakeTowards: "roots",
        //    },
        //  },
          edges: {
            smooth: true,
            arrows: { to: true },
          },
    };

    var network = new vis.Network(container, data, options);

    //network.on("doubleClick", function (params) {
