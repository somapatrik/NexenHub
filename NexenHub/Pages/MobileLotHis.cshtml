@page "{argLot:minlength(15):maxlength(15)}"
@model NexenHub.Pages.MobileLotHis
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>

    <div class="container-fluid">

        <div class="row my-2">
            <div class="col">
                <div class="d-flex w-100">
                    <h5 class="mb-1 fw-bolder flex-grow-1">@Model.lot.LotID</h5>
                    <div class="text-end">@DateTime.Now.ToString("dd.MM.yy HH:mm:ss")</div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">

                <div class="list-group">

                    @{foreach (var history in Model.lot.History)
                        {
                            string bgstyle = "";

                            if (history.itemState == "Hold")
                                bgstyle = "list-group-item-warning";
                            else if (history.itemState == "Scrap")
                                bgstyle = "list-group-item-dark";
                            else if (history.itemState == "Bad")
                                bgstyle = "list-group-item-danger";


                            <div class="list-group-item @bgstyle">
                                <div class="d-flex w-100 justify-content-between">
                                    <span class="mb-1 fw-bolder">@history.locationName</span>
                                    <div class="text-end flex-fill">@history.transDate.ToString("dd.MM.yy HH:mm:ss")</div>
                                </div>

                                <div class="d-flex w-100 justify-content-between">
                                    <span class="mb-1">Stav: @history.itemState</span>
                                </div>

                                <div class="d-flex w-100 justify-content-between">
                                    <span class="mb-1">@history.lotState</span>
                                    <span>@history.qtyUnit</span>
                                </div>
                            </div>
                        }
                    }

                </div>

            </div>
        </div>
    </div>

</body>
</html>