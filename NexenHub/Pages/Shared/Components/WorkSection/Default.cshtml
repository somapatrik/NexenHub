@using NexenHub.Class;
@model NexenHub.ViewModels.WorkSectionViewModel
@{
}

<div class="card">
    <div class="card-body">

@*         <div class="row">
            <div class="col">*@

                <div class="row mb-2" data-bs-toggle="modal" data-bs-target="#@Html.Raw(Model.WC_ID + "_Modal")" style="cursor:pointer;">
                    <div class="col">
                        <div class="d-flex">
                            <h4 class="flex-grow-1">@Model.WC_NAME ></h4>
                            <h4 id="@Html.Raw($"{Model.WC_ID}_percent")"></h4>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col">

                        @foreach (MachineBasicInfo machine in Model.Machines)
                        {
                          <div class="row">
                            <div class="col">
                              <h6>@machine.Name</h6>
                            </div>
                            </div>
                            <div class="row mb-1">
                            <div class="col-lg">
                                <div class="progress">
                                   <div id="@Html.Raw($"{machine.EQ_ID}_bar_ok")" class="progress-bar" role="progressbar" style="width: 0%;background-color:#2EB086;" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                          </div>
                        }

                
                    </div>

                </div>            
@*            </div>
       </div>*@

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="@Html.Raw(Model.WC_ID + "_Modal")" tabindex="-1" aria-labelledby="modalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">@Model.WC_NAME</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <div class="container-fluid">

                    <div class="row">
                        <div class="col">
                            <div class="table-responsive">
                                <table class="table table-sm table-hover text-center">
                                    <thead>
                                        <tr>
                                            <th scope="col"></th>
                                            <th scope="col">Downtime duration</th>
                                            <th scope="col">Downtime %</th>
                                            <th scope="col">Possible production</th>
                                        </tr>
                                    </thead>
                                    <tr>
                                        <th scope="row">
                                            <span>All</span>
                                        </th>
                                        <th scope="row">
                                            <span id="@Html.Raw(Model.WC_ID + "_downtimeDuration")"></span>
                                            
                                        </th>
                                        <th scope="row">
                                            <span id="@Html.Raw(Model.WC_ID + "_downtimePercent")"></span>
                                        </th>
                                        <th scope="row">
                                            <span id="@Html.Raw(Model.WC_ID + "_possibleProdTime")"></span>
                                            </th>
                                    </tr>
                                    @foreach (MachineBasicInfo machine in Model.Machines)
                                    {
                                        <tr id="@Html.Raw(machine.EQ_ID + "_tableRow")">
                                            <td>
                                                <span>@machine.Name</span>
                                            </td>
                                            <td>
                                                <span id="@Html.Raw(machine.EQ_ID + "_downtimeDuration")"></span>
                                            </td>
                                            <td>
                                                <span id="@Html.Raw(machine.EQ_ID + "_downtimePercent")"></span>
                                            </td>
                                            <td>
                                                <span id="@Html.Raw(machine.EQ_ID + "_possibleProdTime")"></span>
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                    

                </div>
                


            </div>
            @*
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
            *@
        </div>
    </div>
</div>
