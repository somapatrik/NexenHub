@model NexenHub.Models.LotItem
@{ 
    
}

<div class="card bg-soma-darklight border-secondary text-md-start text-light">
    <h5 class="card-header">History</h5>
    <div class="card-body p-0">

        <div class="list-group">

            @{foreach(var history in @Model.History) 
                {

                <div class="list-group-item bg-transparent text-white mb-1">

                    <div class="d-flex w-100 justify-content-between">
                        <span>@history.locationName</span>
                        <small>@history.transDate.ToString("yyyy-MM-dd HH:mm:ss")</small>
                    </div>

                    <div class="d-flex w-100">
                        <div class="flex-grow-1">
                            <small>
                                <span class="badge bg-secondary">@history.lotState</span>
                                @{
                                    @*if (history.itemState == "Normal")
                                    {
                                        <span class="badge bg-secondary">@history.itemState</span>
                                    }
                                    else*@ 
                                    if (history.itemState == "Bad")
                                    {
                                        <span class="badge bg-danger">@history.itemState</span>
                                    }
                                    else if (history.itemState == "Hold")
                                    {
                                        <span class="badge bg-warning text-black">@history.itemState</span>
                                    }
                                    else if (history.itemState == "Scrap")
                                    {
                                        <span class="badge bg-danger">@history.itemState</span>
                                    }
                                }
                            </small>
                        </div>

                        <div>
                            @history.qtyUnit
                        </div>
                    </div>

                </div>
                }
            }

        </div>

    </div>
</div>