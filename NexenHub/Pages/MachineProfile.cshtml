@page "{EQ_ID}"
@model NexenHub.Pages.MachineProfileModel
@{
}

<span class="display-4">This argument is @Model.IArg</span>

<div class="container">
    <div class="row">
        <div class="col-7">

        </div>
        <div class="col-5">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center">Shift downtimes</h5>
                    <canvas id="myChart" width="400" height="400"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var ctx = document.getElementById('myChart');
    var myChart = new Chart(ctx, {
        type: 'doughnut',
        data: {
            /*labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange']*/
            labels: @Html.Raw(Model.chartlabels),
        datasets: [
             @Html.Raw(Model.chartdataset)
            @*{

                data: [12, 19, 3, 5, 2, 3]
                @Html.Raw(Model.chartdata),
                backgroundColor: [
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(75, 192, 192, 1)',
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }*@]
        },
    options:
    {
        responsive: true
    }
});
</script>
