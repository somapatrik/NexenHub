@page "{EQ_ID}"
@model NexenHub.Pages.MachineProfileModel
@{
    ViewData["mainSelected"] = "machines";

    string txtc = "text-light";
    string bgc = "bg-soma-darklight";

    if (Model.WO.TEST_YN == "Y")
    {
        txtc = "text-dark";
        bgc = "bg-warning";
    }
}

<!-- Top bar - Machine name etc... -->
<div class="container-fluid">

    <!-- PM -->
    @{ if (Model.IsPM)
        {
            <div class="row border-2 border-bottom p-2 bg-warning text-dark">
                <div class="col">
                    <div class="d-flex justify-content-center">
                        <h5>Preventive maintenance is in progress</h5>
                    </div>
                </div>
            </div>

        }
    }

    <!-- Main info -->
    <div class="row border-bottom border-2 p-3" style="background-color: #f7f7f7;">
        <div class="col">
            <div class="row">
                <div class="col">
                    <h4>@Model.machineBasic.Name</h4>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="d-flex flex-row text-muted">

                        <div class="p-2">@Model.machineBasic.WC_ID</div>

                        <div class="p-2">/</div>
                        <div class="p-2">@Model.machineBasic.PROC_ID</div>

                        <div class="p-2">/</div>
                        <div class="p-2">@Model.machineBasic.EQ_ID</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="row">
                <div class="col">
                    <div class="d-flex flex-row-reverse">
                        <div class="p-2">
                            <a class="btn btn-sm btn-outline-success" href="#">Generate report</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Downtime -->
    @{ if (Model.IsDowntime)
        {
            <div class="row border-2 border-bottom p-2 bg-danger text-white">
                <div class="col">
                    <div class="d-flex justify-content-center">
                        <h5 class="p-2">@Model.DownTimeMessage</h5>
                    </div>
                </div>
            </div>
        }
    }

</div>


<div class="container-fluid">

    <!-- WO + Current production -->
    <div class="row my-2 g-4">

        <div class="col-lg-8">

            <div class="row">
                <div class="col">
                    @await Component.InvokeAsync("MachineWoList", @Model.machineBasic.EQ_ID)
                </div>
            </div>

        </div>

        <div class="col">

            <div class="row mb-3">

                <div class="col">

                    <div class="card @{if (Model.WO.TEST_YN == "Y") { @Html.Raw("bg-warning text-dark") } else { @Html.Raw("") } }">

                        <div class="card-header">
                            <div class="d-flex">
                                <div class="flex-grow-1">
                                    Produced item
                                </div>
                                @{
                                    if (@Model.WO.TEST_YN == "Y")
                                    {
                                        <div class="badge bg-warning text-dark">PROTOTYPE</div>
                                    }

                                    if (!string.IsNullOrEmpty(@Model.WO.PROD_TYPE))
                                    {
                                        <div>
                                            <span class="badge bg-dark">@Model.WO.PROD_TYPE</span>
                                        </div>
                                    }

                                    if (@Model.WO.OE)
                                    {
                                        <div>
                                            <span class="badge bg-primary">OE</span>
                                        </div>
                                    }
                                }
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="container">

                                <div class="row mt-3 mb-3">
                                    <div class="col text-center"><h3>@Model.WO.ITEM_ID <br /> @Model.WO.ITEM_NAME</h3></div>
                                </div>

                                @{
                                    if (@Model.WO.TEST_YN == "Y")
                                    {
                                        <div class="row">
                                            <div class="col text-center">@Model.WO.PROTOTYPE_ID <br /> @Model.WO.PROTOTYPE_VER </div>
                                        </div>
                                    }
                                }

                            </div>

                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

</div>

<div class="container-fluid">

    <!-- Material in use -->
    <div class="row my-2 g-4">
        <div class="col-lg-8">
            @await Component.InvokeAsync("MachineMaterialInUse", @Model.machineBasic.EQ_ID)
        </div>

        <div class="col">

            <div class="card">
                <div class="card-header">
                    @{ if (Model.WO.TEST_YN == "Y")
                        {
                            @Html.Raw("Prototype BOM")
                        }
                        else
                        {
                            @Html.Raw("BOM")
                        }
                    }
                </div>
                <div class="card-body">
                    <table class="table table-borderless table-hover">
                        <tbody>

                            @{ foreach (var material in Model.BOM)
                                {
                                    <tr>
                                        <th scope="row">@material.ITEM_ID</th>
                                        <td>@material.ITEM_NAME</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>

</div>

<div class="container-fluid">
    <!-- Production chart -->
    <div class="row my-2 g-4">
        <div class="col-lg-6">
            @{
                if (!string.IsNullOrEmpty(Model.machineBasic.EQ_ID))
                {
                    @await Component.InvokeAsync("MachineReportProd", Model.machineProduction)
                }
            }
        </div>

        @*<div class="col">
            @await Component.InvokeAsync("MachineReportDownTime", Model.machineDownTime)
        </div>*@
    </div>

</div>
