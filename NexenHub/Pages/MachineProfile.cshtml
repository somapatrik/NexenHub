@page "{EQ_ID}"
@model NexenHub.Pages.MachineProfileModel
@{
}

<div class="container">
    <div class="row">
        <div class="col">
            <div class="h4">@Model.machineBasic.Name</div>
        </div>
    </div>
    <div class="row">
        <div class="col-7">
            
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="card">
                            <div class="card-header">
                                Workorder
                                @{
                                    if (@Model.WO.TEST_YN == "Y")
                                    {
                                        <span class="badge badge-warning">Test</span>
                                    }
                                }

                            </div>
                            <div class="card-body">

                                <div class="container">
                                    <div class="row">
                                        <div class="col"><b>@Model.WO.WO_NO</b></div>
                                        <div class="col"><b>@Model.WO.WO_STIME</b></div>
                                    </div>
                                    <div class="row">
                                        <div class="col">Quantity: @Model.WO.PROD_QTY / @Model.WO.WO_QTY</div>
                                        <div class="col">Type: @Model.WO.PROD_TYPE</div>
                                    </div>
                                    <div class="row">
                                        <div class="col">Item: @Model.WO.ITEM_ID / @Model.WO.ITEM_NAME</div>
                                    </div>
                                    <div class="row">
                                        <div class="col">@*Test: @Model.WO.TEST_YN*@</div>
                                        <div class="col">PROTOTYPE_ID: @Model.WO.PROTOTYPE_ID</div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="row mt-3">
                    <div class="col">
                        <div class="card">
                            <div class="card-header">Inputed material</div>
                            <div class="card-body">

                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th scope="col">POS</th>
                                            <th scope="col">CART ID</th>
                                            <th scope="col">ITEM ID</th>
                                            <th scope="col">ITEM NAME</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @{ foreach(var material in Model.Inputed)
                                        {
                                            <tr>
                                                <th scope="row">@material.IO_POSID</th>
                                                <td>@material.CART_ID</td>
                                                <td>@material.ITEM_ID</td>
                                                <td>@material.ITEM_NAME</td>
                                            </tr>
                                        }
                                        }
                                    </tbody>
                                </table>


                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col">
                        <div class="card">
                            <div class="card-header">
                                BOM
                            </div>
                            <div class="card-body">

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        
        <div class="col-5">
            <div class="card">
                <div class="card-header">
                    Shift downtimes
                </div>
                <div class="card-body">
                    <canvas id="myChart" ></canvas>
                </div>
            </div>
        </div>
    </div>
    
</div>

<script>
    var ctx = document.getElementById('myChart');
    var myChart = new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: @Html.Raw(Model.chartlabels),
            datasets: [@Html.Raw(Model.chartdataset)]
        },
    options:
    {
        responsive: true
    }
});
</script>
