@page "{eqarg?}/{startarg:datetime?}/{endarg:datetime?}"
@model NexenHub.Pages.MachineReportModel
@{
}

<div class="container">

    <div class="row mb-3 flex-row-reverse">
        <div class="col">

            <div class="card bg-soma-darklight text-light">
                <div class="card-header"><h5>Select machine to report</h5></div>
                <div class="card-body">
                    <form method="post">
                        <div class="input-group mb-3">

                            <span class="input-group-text">Machine</span>

                            <select class="form-control" asp-for="SelectedMachine">
                                <option value="" />
                                @{
                                    foreach (var Machine in Model.Machines)
                                    {
                                        <option value="@Machine.EQ_ID">@Machine.EQ_ID - @Machine.Name</option>
                                    }
                                }
                            </select>

                            <span class="input-group-text">From</span>
                            <input type="text" id="myfrom" class="form-control" asp-for="DateFrom" data-provide="datepicker" data-date-end-date="0d">
                            <span class="input-group-text">To</span>
                            <input type="text" id="myTo" class="form-control" asp-for="DateTo" data-provide="datepicker" data-date-end-date="0d">

                        </div>

                        <div class="row flex-row-reverse">
                            <div id="btnGenerate" class="col-sm-auto">
                                <button type="submit" class="btn btn-success" onclick="ShowSpinner();" asp-page-handler="generate">Generate report</button>
                            </div>
                            <div id="spinner" class="col-sm-auto" style="visibility:collapse">
                                <button class="btn btn-success" type="button" disabled>
                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                    Loading...
                                </button>
                            </div>
                        </div>

                    </form>
                </div>

            </div>

        </div>
    </div>


    @{
        if (Model.IsValid)
        {

            <div class="row mb-3">

                <div class="col-lg-7">
                    @await Component.InvokeAsync("MachineReportProd", Model.reportData)


                </div>
                <div class="col-lg-5">

                    @await Component.InvokeAsync("MachineReportDownTime", Model.reportDowntTimes)


                </div>
            </div>

            <div class="row">
                <div class="col">
                    @await Component.InvokeAsync("MachineReportUsedMat", Model.reportUsedMaterial)
                </div>
            </div>

        }
    }

</div>

<script type="text/javascript">

    $('#myfrom').datepicker({
        format: 'yyyy-mm-dd',
        weekStart: '1'
    });

    $('#myTo').datepicker({
        format: 'yyyy-mm-dd',
        weekStart: '1'
    });

    function ShowSpinner() {
        var spin = document.getElementById("spinner");
        var btn = document.getElementById("btnGenerate");

        spin.style.visibility = "visible";
        btn.style.visibility = "collapse";
    }

</script>

