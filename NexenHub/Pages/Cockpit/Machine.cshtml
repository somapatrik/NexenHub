@page "{EQ_ID:length(5)}"
@model NexenHub.Pages.Cockpit.MachineModel
@{
    Layout = "_LayoutSide";
}

<div class="container-fluid">

    <div class="row" style="height:100vh;">

        <div class="col-xl-2 bg-dark-blue">

            <div class="row">
                <div class="col">
                    @await Component.InvokeAsync("MachineTagname", Model.machineInfo)
                </div>
            </div>

            <div class="row">
                <div class="col p-0" >
                @await Component.InvokeAsync("WoLine", Model.EQ_ID)
                </div>
            </div>

        </div>

        <div class="col">

            <div class="row">
                <div class="col-6">
                    <div class="card">
                        <div class="card-body p-0">
                            @await Component.InvokeAsync("InputPositions", Model.EQ_ID)
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="col-xl-2 bg-dark-blue">

            <div class="row p-3">
                <div class="col">
                    <h5 class="text-white">Latest production</h5>
                </div>
            </div>

             <div class="row" style="overflow-y:auto;">
                <div class="col p-0">
                    @await Component.InvokeAsync("MachineProdList", Model.EQ_ID)
                </div>
            </div>

        </div>
    </div>


</div>
